<main class="demo-container">
    <h1>
        <%= title %>
    </h1>
    <div class="demo-description">
        <p>
            <%= description %>
        </p>
    </div>

    <div class="demo-content">
        <div class="canvas-container">
            <svg id="svg-canvas" viewBox="0 0 800 500"></svg>
        </div>

        <aside class="demo-controls">
            <div class="control-group">
                <h3 data-i18n="control-title">实验控制</h3>
                <div class="buttons">
                    <button id="btn-play" class="btn primary" data-i18n="btn-play">开始演示</button>
                    <button id="btn-pause" class="btn secondary" data-i18n="btn-pause">暂停</button>
                    <button id="btn-reset" class="btn warning" data-i18n="btn-reset">重置</button>
                </div>
            </div>

            <div class="control-group">
                <h3 data-i18n="params-title">参数设置</h3>
                <label for="slider-u" id="slider-label">物距 (u): <span id="val-u">300</span></label>
                <input type="range" id="slider-u" min="30" max="350" value="300" step="1">
            </div>

            <div class="control-group">
                <h3 data-i18n="data-title">实时数据</h3>
                <div class="data-grid">
                    <div class="data-item">
                        <span class="label" data-i18n="label-f">焦距 (f)</span>
                        <span class="value" id="data-f">100</span>
                    </div>
                    <div class="data-item">
                        <span class="label" data-i18n="label-u">物距 (u)</span>
                        <span class="value" id="data-u">300</span>
                    </div>
                    <div class="data-item">
                        <span class="label" data-i18n="label-v">像距 (v)</span>
                        <span class="value" id="data-v">150</span>
                    </div>
                    <div class="data-item">
                        <span class="label" data-i18n="label-m">放大倍数 (M)</span>
                        <span class="value" id="data-m">-0.5</span>
                    </div>
                    <div class="data-item status">
                        <span class="label" data-i18n="label-type">成像性质</span>
                        <span class="value" id="data-type">倒立 缩小 实像</span>
                    </div>
                </div>
            </div>
        </aside>
    </div>
    
    <div class="demo-explanation">
        <h2>原理解释</h2>
        <p>
            <%= explanation %>
        </p>
    </div>
</main>